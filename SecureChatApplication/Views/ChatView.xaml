<UserControl x:Class="SecureChatApplication.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#1E1E2E">
    
    <UserControl.Resources>
        <!-- Message Bubble Styles -->
        <DataTemplate x:Key="OwnMessageTemplate">
            <Border Background="#7C3AED" CornerRadius="16,16,4,16" 
                    Padding="14,10" Margin="80,4,8,4"
                    HorizontalAlignment="Right" MaxWidth="400">
                <StackPanel>
                    <TextBlock Text="{Binding Content}" 
                               Foreground="#FFFFFF" 
                               FontSize="14"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" 
                               Foreground="#D8B4FE" 
                               FontSize="10"
                               HorizontalAlignment="Right"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <DataTemplate x:Key="OtherMessageTemplate">
            <StackPanel Margin="8,4,80,4" HorizontalAlignment="Left" MaxWidth="400">
                <TextBlock Text="{Binding SenderUsername}" 
                           Foreground="#8B8BA3" 
                           FontSize="11"
                           Margin="12,0,0,2"/>
                <Border Background="#2D2D3D" CornerRadius="16,16,16,4" Padding="14,10">
                    <StackPanel>
                        <TextBlock Text="{Binding Content}" 
                                   Foreground="#FFFFFF" 
                                   FontSize="14"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" 
                                   Foreground="#6B6B8A" 
                                   FontSize="10"
                                   HorizontalAlignment="Right"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </DataTemplate>
        
        <!-- Message Template Selector -->
        <local:MessageTemplateSelector x:Key="MessageTemplateSelector"
                                       OwnMessageTemplate="{StaticResource OwnMessageTemplate}"
                                       OtherMessageTemplate="{StaticResource OtherMessageTemplate}"
                                       xmlns:local="clr-namespace:SecureChatApplication.Views"/>
        
        <!-- User List Item Style -->
        <Style x:Key="UserListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#B8B8D1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="4,2">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D5C"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="MessageTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D3D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3D3D5C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#FFFFFF"/>
            <Setter Property="AcceptsReturn" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="24">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#7C3AED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Send Button Style -->
        <Style x:Key="SendButton" TargetType="Button">
            <Setter Property="Background" Value="#7C3AED"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="24">
                            <TextBlock Text=">" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#8B5CF6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6D28D9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4B4B6B"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Sidebar - Users List -->
        <Border Background="#252536" CornerRadius="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Padding="20,16" BorderBrush="#3D3D5C" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="[Secure Chat]" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FFFFFF"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Ellipse Width="8" Height="8" Fill="#10B981" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding CurrentUsername}" 
                                       Foreground="#8B8BA3" 
                                       FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Search/Filter -->
                <Border Grid.Row="1" Padding="12,12">
                    <TextBlock Text="Online Users" 
                               Foreground="#6B6B8A" 
                               FontSize="12" 
                               FontWeight="SemiBold"/>
                </Border>
                
                <!-- Users List -->
                <ListBox Grid.Row="2" 
                         ItemsSource="{Binding OnlineUsers}"
                         SelectedItem="{Binding SelectedUser}"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemContainerStyle="{StaticResource UserListItemStyle}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- User Avatar -->
                                <Border Grid.Column="0" 
                                        Width="36" Height="36" 
                                        CornerRadius="18" 
                                        Background="#3D3D5C"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="{Binding Username, Converter={StaticResource FirstLetterConverter}}" 
                                               Foreground="#FFFFFF"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                
                                <!-- Username -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Username}" 
                                               FontSize="14"/>
                                    <TextBlock FontSize="10" Foreground="#6B6B8A">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Click to start secure chat"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsKeyExchangeComplete}" Value="True">
                                                        <Setter Property="Text" Value="[Encrypted]"/>
                                                        <Setter Property="Foreground" Value="#10B981"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                
                                <!-- Encryption Status -->
                                <Ellipse Grid.Column="2" 
                                         Width="8" Height="8" 
                                         VerticalAlignment="Center">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#6B6B8A"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsKeyExchangeComplete}" Value="True">
                                                    <Setter Property="Fill" Value="#10B981"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Disconnect Button -->
                <Border Grid.Row="3" Padding="12" BorderBrush="#3D3D5C" BorderThickness="0,1,0,0">
                    <Button Content="Disconnect" 
                            Command="{Binding DisconnectCommand}"
                            Background="#EF4444"
                            Foreground="#FFFFFF"
                            Padding="12,8"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F87171"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </Grid>
        </Border>
        
        <!-- Right - Chat Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Chat Header -->
            <Border Grid.Row="0" 
                    Background="#252536" 
                    Padding="20,16"
                    BorderBrush="#3D3D5C" 
                    BorderThickness="0,0,0,1">
                <Grid>
                    <StackPanel Orientation="Horizontal"
                                Visibility="{Binding SelectedUser, Converter={StaticResource NullToVisibilityConverter}}">
                        <Border Width="40" Height="40" 
                                CornerRadius="20" 
                                Background="#3D3D5C"
                                Margin="0,0,12,0">
                            <TextBlock Text="{Binding SelectedUser.Username, Converter={StaticResource FirstLetterConverter}}" 
                                       Foreground="#FFFFFF"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedUser.Username}" 
                                       Foreground="#FFFFFF" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"/>
                            <TextBlock FontSize="12">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Establishing secure connection..."/>
                                        <Setter Property="Foreground" Value="#EAB308"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedUser.IsKeyExchangeComplete}" Value="True">
                                                <Setter Property="Text" Value="[End-to-end encrypted]"/>
                                                <Setter Property="Foreground" Value="#10B981"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- No user selected -->
                    <TextBlock Text="Select a user to start chatting"
                               Foreground="#6B6B8A"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Visibility="{Binding SelectedUser, Converter={StaticResource NullToVisibilityInverseConverter}}"/>
                </Grid>
            </Border>
            
            <!-- Messages Area -->
            <Border Grid.Row="1" Background="#1E1E2E">
                <Grid>
                    <!-- Messages List -->
                    <ListBox x:Name="MessagesListBox"
                             ItemsSource="{Binding Messages}"
                             ItemTemplateSelector="{StaticResource MessageTemplateSelector}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Visibility="{Binding SelectedUser, Converter={StaticResource NullToVisibilityConverter}}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    
                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="{Binding SelectedUser, Converter={StaticResource NullToVisibilityInverseConverter}}">
                        <TextBlock Text="[SECURE]" FontSize="32" FontWeight="Bold" Foreground="#3D3D5C" HorizontalAlignment="Center"/>
                        <TextBlock Text="Select a user to start a secure conversation" 
                                   Foreground="#6B6B8A" 
                                   FontSize="14"
                                   Margin="0,16,0,0"/>
                        <TextBlock Text="Messages are end-to-end encrypted" 
                                   Foreground="#4B4B6B" 
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Message Input -->
            <Border Grid.Row="2" 
                    Background="#252536" 
                    Padding="16"
                    BorderBrush="#3D3D5C" 
                    BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0"
                             Style="{StaticResource MessageTextBox}"
                             Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding SelectedUser.IsKeyExchangeComplete}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SendMessageCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    
                    <Button Grid.Column="1"
                            Style="{StaticResource SendButton}"
                            Command="{Binding SendMessageCommand}"
                            IsEnabled="{Binding CanSendMessage}"
                            Margin="12,0,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
